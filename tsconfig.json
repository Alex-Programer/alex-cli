{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["esnext", "DOM"],
    "module": "CommonJS",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "outDir": "dist",
    "declaration": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
